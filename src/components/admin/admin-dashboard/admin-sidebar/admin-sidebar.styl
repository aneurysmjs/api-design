.sidebar
  display none

@media (min-width: 768px)
  .sidebar
    background-color #f5f5f5
    border-right 1px solid #eee
    bottom 0
    display block
    left 0
    overflow-x hidden
    overflow-y auto
    padding 20px
    position fixed
    top 51px
    z-index 1000

.nav-sidebar
  margin-right -21px
  margin-bottom 20px
  margin-left -20px
  & > li
    & > a
      padding-right 20px
      padding-left 20px

.nav-sidebar > .active > a,
.nav-sidebar > .active > a:hover,
.nav-sidebar > .active > a:focus
  color #fff
  background-color #428bca
